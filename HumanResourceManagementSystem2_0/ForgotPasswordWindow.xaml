<Window x:Class="HumanResourceManagementSystem2_0.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="Forgot Password" 
        Height="500" 
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" Padding="30" CornerRadius="20,0,0,20">
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="Forgot Password?" FontSize="28" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Don't worry! It happens. Please enter the email associated with your account." 
                           FontSize="14" Foreground="Gray" Margin="0, 0, 0, 30" TextWrapping="Wrap"/>

                <TextBlock Text="Email Address or User ID" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="txtUserNameEmail" Padding="10" Height="40" BorderBrush="LightGray" Margin="0,0,0,25" VerticalContentAlignment="Center"/>

                <Button Content="Send Reset Link" Height="45" Background="#5F4BFF" Foreground="White" FontSize="16" Margin="0,0,0,15" Click="SendResetLink_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="← Back to Login" HorizontalAlignment="Center" Foreground="Gray" Style="{x:Null}" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="BackToLogin_Click"/>

            </StackPanel>
        </Border>

        <Border x:Name="RightBorder" 
                Grid.Column="1" 
                CornerRadius="0,20,20,0" 
                ClipToBounds="True"
                Background="White">

            <Grid>
                <Grid x:Name="ImageContainer">
                </Grid>

                <Rectangle Opacity="0.1">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15" Background="Transparent" Foreground="Gray" BorderThickness="0" FontSize="18" FontWeight="Bold" Cursor="Hand" Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>