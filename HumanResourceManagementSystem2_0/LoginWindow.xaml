<Window x:Class="HumanResourceManagementSystem2_0.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="Login" Height="500" Width="800"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" Padding="30" CornerRadius="20,0,0,20">
            <StackPanel x:Name="LoginPanel" VerticalAlignment="Center">
                <TextBlock Text="Login" FontSize="32" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="See your growth and get consulting support!" FontSize="14" Foreground="Gray" Margin="0, 0, 0, 25" TextWrapping="Wrap"/>

                <TextBlock Text="User ID" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUserID" Text="admin" Padding="10" Height="40" BorderBrush="LightGray" Margin="0,0,0,15" VerticalContentAlignment="Center"/>

                <TextBlock Text="Password" Margin="0,0,0,5" />
                <PasswordBox x:Name="txtPassword" Password="123" Padding="10" Height="40" BorderBrush="LightGray" Margin="0,0,0,20" VerticalContentAlignment="Center"/>

                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Content="Remember me" IsChecked="False" Grid.Column="0" VerticalContentAlignment="Center"/>
                    <Button Content="Forgot password?" Grid.Column="1" HorizontalAlignment="Right" Foreground="#5F4BFF" Style="{x:Null}" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                </Grid>

                <Button Content="Login" Height="45" Background="#5F4BFF" Foreground="White" FontSize="16" Margin="0,0,0,7" Click="LoginButton_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <Border x:Name="RightBorder" Grid.Column="1" CornerRadius="0,20,20,0">
            <Border.Background>
                <ImageBrush Stretch="UniformToFill"/>
            </Border.Background>

            <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15" 
                    Background="Transparent" Foreground="Gray" BorderThickness="0" 
                    FontSize="18" FontWeight="Bold" Cursor="Hand"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Window>