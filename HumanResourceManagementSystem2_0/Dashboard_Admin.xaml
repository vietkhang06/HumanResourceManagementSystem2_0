<UserControl x:Class="HumanResourceManagementSystem2_0.Dashboard_Admin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#F5F7FB" FontFamily="Segoe UI">

    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#555"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#F0F0F0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Total Employees" Foreground="#333" FontSize="14" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="120" FontSize="28" FontWeight="Bold"/>
                            <TextBlock Text="+5 New Employees" Foreground="#2ECC71" VerticalAlignment="Bottom" Margin="10,0,0,4" FontSize="12"/>
                        </StackPanel>
                        <Border Background="#F0F0F0" CornerRadius="5" HorizontalAlignment="Left" Padding="8,4" Margin="0,15,0,0">
                            <TextBlock Text="April 2025 ▼" FontSize="11" Foreground="Gray"/>
                        </Border>
                    </StackPanel>
                    <Border Width="40" Height="40" CornerRadius="10" Background="#E0F7FA" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <TextBlock Text="👥" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#00BCD4" FontSize="18"/>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Pending Requests" Foreground="#333" FontSize="14" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="04" FontSize="28" FontWeight="Bold"/>
                            <TextBlock Text="+3 Request Populated" Foreground="#2ECC71" VerticalAlignment="Bottom" Margin="10,0,0,4" FontSize="12"/>
                        </StackPanel>
                        <Border Background="#F0F0F0" CornerRadius="5" HorizontalAlignment="Left" Padding="8,4" Margin="0,15,0,0">
                            <TextBlock Text="April 2025 ▼" FontSize="11" Foreground="Gray"/>
                        </Border>
                    </StackPanel>
                    <Border Width="40" Height="40" CornerRadius="10" Background="#EDE7F6" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <TextBlock Text="📄" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#673AB7" FontSize="18"/>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="0">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Resigned Employees" Foreground="#333" FontSize="14" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="04" FontSize="28" FontWeight="Bold"/>
                            <TextBlock Text="+1 New Resignations" Foreground="#E74C3C" VerticalAlignment="Bottom" Margin="10,0,0,4" FontSize="12"/>
                        </StackPanel>
                        <Border Background="#F0F0F0" CornerRadius="5" HorizontalAlignment="Left" Padding="8,4" Margin="0,15,0,0">
                            <TextBlock Text="April 2025 ▼" FontSize="11" Foreground="Gray"/>
                        </Border>
                    </StackPanel>
                    <Border Width="40" Height="40" CornerRadius="10" Background="#FFEBEE" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <TextBlock Text="👤" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#E74C3C" FontSize="18"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,30,0">
                    <TextBlock Text="Pending Requests (04)" FontSize="16" FontWeight="Bold" Foreground="#2ECC71"/>
                    <Border Height="3" Background="#2ECC71" CornerRadius="1.5" Margin="0,5,0,0" Width="50" HorizontalAlignment="Left"/>
                </StackPanel>
                <TextBlock Text="Approved Requests" FontSize="16" Foreground="Gray" Margin="0,0,30,0" VerticalAlignment="Center"/>
                <TextBlock Text="Rejected Requests" FontSize="16" Foreground="Gray" VerticalAlignment="Center"/>
            </StackPanel>

            <Border HorizontalAlignment="Right" Width="250" Height="35" CornerRadius="17" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <TextBlock Text="🔍" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray"/>
                    <TextBox Text="Search employee..." Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Margin="35,0,10,0" Foreground="Gray"/>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <DataGrid x:Name="dgRequests" AutoGenerateColumns="False" 
                      CanUserAddRows="False" HeadersVisibility="Column" 
                      GridLinesVisibility="None" Background="White" BorderThickness="0">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="50">
                        <DataGridTemplateColumn.Header>
                            <CheckBox/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Emp ID" Binding="{Binding EmployeeID}" Width="80" FontWeight="Bold" Foreground="Gray"/>

                    <DataGridTemplateColumn Header="Employee Name" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="35" Height="35" CornerRadius="17.5" Background="#DDD" Margin="0,0,10,0">
                                        <Image Source="{Binding AvatarPath}" Stretch="UniformToFill">
                                            <Image.Clip>
                                                <EllipseGeometry Center="17.5,17.5" RadiusX="17.5" RadiusY="17.5"/>
                                            </Image.Clip>
                                        </Image>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Position}" FontSize="11" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="120" Foreground="Gray"/>

                    <DataGridTemplateColumn Header="Leave Type" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding LeaveColorBg}" CornerRadius="12" Padding="10,4" HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding LeaveType}" Foreground="{Binding LeaveColorFg}" FontSize="11" FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="100" Foreground="Gray"/>
                    <DataGridTextColumn Header="Date Applied" Binding="{Binding DateApplied}" Width="120" Foreground="Gray"/>

                    <DataGridTemplateColumn Header="Action" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="View More" Foreground="#2ECC71" FontWeight="Bold" TextDecorations="Underline" Cursor="Hand" VerticalAlignment="Center"/>
                                    <Button Content="⋮" Background="Transparent" BorderThickness="0" Foreground="Gray" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reject" Width="100" Height="40" Background="White" BorderBrush="#E74C3C" BorderThickness="1" Foreground="#E74C3C" FontWeight="Bold" Margin="0,0,15,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Approve" Width="100" Height="40" Background="#2ECC71" BorderThickness="0" Foreground="White" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

    </Grid>
</UserControl>